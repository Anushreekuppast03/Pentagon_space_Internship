package in.ps.jdbcsteps;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;

public class JDBCDemo {

	public static void main(String[] args) throws ClassNotFoundException {
		// TODO Auto-generated method stub
		Connection con=null;
		Statement stmt=null;
		String url="jdbc:mysql://localhost:3306";
		String user="root";
		String password="Anu@2003";
		//step 1(loading & registering a driver class jdbc api to jdbc driver implementation
	try {
		Class.forName("com.mysql.cj.jdbc.Driver");
		System.out.println("driver loaded successfully");
	
	
	
	
	// step 2nd: establish connection b/w java & dB
	
          con=DriverManager.getConnection(url,user,password);
	      System.out.println("connection established successful");

//jdbc:mysql://198:136.111.2013306?user=root & password=Anu@2003
	
	//step 3:creating a platform to execute sql exception
	     stmt=con.createStatement();
	     System.out.println("platform created successfully");
	}	     
catch(ClassNotFoundException | SQLException e) {
	e.printStackTrace();
}
}
}